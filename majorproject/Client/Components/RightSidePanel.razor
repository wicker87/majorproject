<div class="right-side-panel @(isCollapsed ? "collapsed" : "expanded")">
    <button @onclick="TogglePanel" title="RMCP" class="toggle-button">
        @(isCollapsed ? "<" : ">")
    </button>
    @if (!isCollapsed)
    {
        <iframe src="https://wsh.sg/box/CodeOfPractice_RiskManagement_ThirdRevision,2021.pdf#zoom=75" width="100%" height="100%" />
    }
</div>

<style>
    .right-side-panel {
        position: fixed;
        top: 6.8%;
        right: 0;
        height: 93.2%;
        width: 620px;
        background-color: #f5f5f5;
        box-shadow: -1px 0 5px rgba(0,0,0,0.4);
        transition: transform 0.3s ease;
        z-index: 1000;
    }

    .collapsed {
        transform: translateX(100%);
    }

    .expanded {
        transform: translateX(0);
    }

    .toggle-button {
        position: absolute;
        top: 45%;
        left: -20px; 
        background-color: rgba(255, 128, 0, 0.7);
        color: black;
        border: none;
        padding: 5px;
        cursor: pointer;
        z-index: 1001;
        font-size: 16px; 
    }

    .toggle-button:hover {
            background-color: rgba(255, 128, 0, 1);
    }
</style>

@code {
    private bool isCollapsed = true;

    private void TogglePanel()
    {
        isCollapsed = !isCollapsed;
    }
}
