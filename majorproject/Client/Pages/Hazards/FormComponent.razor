<EditForm Model="@hazard" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label> Name: </label>
            <div>
                <InputText @bind-Value="hazard.Name" class="form-control" style="width: 500px;" />
                <ValidationMessage For="@(() => hazard.Name)" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <label> Possible Injury/Ill-health: </label>
            <div>
                <InputText @bind-Value="hazard.PossibleInjury" class="form-control" style="width: 500px;" />
                <ValidationMessage For="@(() => hazard.PossibleInjury)" />
            </div>
        </div>
    </fieldset>
    <br />
    <div style="display: flex; gap: 80px">
        <div>
            @if (!Disabled)
            {
                <button type="submit" class="btn btn-success btn-block">
                    @ButtonText
                </button>
            }
        </div>
        @* <div>
            <BackToList Target="hazards" />
        </div> *@
    </div>
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Hazard? hazard { get; set; } 
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; } 

}
