@inject IJSRuntime js

<EditForm Model="@raf" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div>
            <div class="form-group">
                <label> Department: </label>
                <div>
                    <InputText @bind-Value="raf.Department" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.Department)" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label> Process: </label>
                <div>
                    <InputText @bind-Value="raf.Process" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.Process)" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label> Location: </label>
                <div>
                    <InputText @bind-Value="raf.Location" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.Location)" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label> Assessment Date: </label>
                <div>
                    <InputDate @bind-Value="raf.AssessmentDate" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.AssessmentDate)" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label> Last Review Date: </label>
                <div>
                    <InputDate @bind-Value="raf.LastReviewDate" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.LastReviewDate)" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label> Next Review Date: </label>
                <div>
                    <InputDate @bind-Value="raf.NextReviewDate" class="form-control" style="width: 500px;" />
                    <ValidationMessage For="@(() => raf.NextReviewDate)" />
                </div>
            </div>
        </div>
    </fieldset>
    <br />
    <div style="display: flex; gap: 80px">
        <div>
            @if (!Disabled)
            {
                <button type="submit" class="btn btn-success btn-block">
                    @ButtonText
                </button>
            }
        </div>
        <div>
            <BackToList Target="rafs" />
        </div>
    </div>
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public RAF? raf { get; set; } 
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; } 

}
