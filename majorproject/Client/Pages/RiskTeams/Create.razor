@page "/riskteams/create"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Risk Team</h3>
<hr />
<br /> 

<FormComponent ButtonText="Create RiskTeam" riskteam="riskteam" OnValidSubmit="@CreateRiskTeam" />



@code {
    RiskTeam riskteam = new RiskTeam();

    private async Task CreateRiskTeam()
    {
        await _client.PostAsJsonAsync(Endpoints.RiskTeamsEndpoint, riskteam);
        _navManager.NavigateTo("/riskteams/");
    }
}
