@page "/employees/create"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Employee</h3>
<hr />
<br /> 

<FormComponent ButtonText="Create Employee" employee="employee" OnValidSubmit="@CreateEmployee" />



@code {
    Employee employee = new Employee();

    private async Task CreateEmployee()
    {
        await _client.PostAsJsonAsync(Endpoints.EmployeesEndpoint, employee);
        _navManager.NavigateTo("/employees/");
    }
}
